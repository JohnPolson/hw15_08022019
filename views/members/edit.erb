<h2>Update member <%= @members.full_name %></h2>
<form method="POST" action="/members/<%=@members.id%>">
  <div>
    <label for="first_name">First Name:</label>
    <input type="text" name="first_name" id="first_name" value= "<%=@members.first_name %>"/>
  </div>

  <div>
    <label for="last_name">Last Name:</label>
    <input type="text" name="last_name" id="last_name" value= "<%=@members.last_name %>"/>
  </div>

  <div>
    <label for="age">Age:</label>
    <input type="text" name="age" id="age" value="<%=@members.age %>"/>
  </div>

  <div>
    <label for="address">Address:</label>
    <input type="text" name="address" id="address" value="<%=@members.address %>"/>
  </div>

  <div>
    <label for="email">E-mail:</label>
    <input type="text" name="email" id="email" value="<%=@members.email %>"/>
  </div>

  <div>

    <input class="btn btn--action" type="submit" value="Update">

  </div>


</form>
