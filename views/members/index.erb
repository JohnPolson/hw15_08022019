<h3>Members List:</h3>

<p>
  <a href="/members/new">Add new member!</a>
</p>

<table>
  <tr>

    <th>Name</th>

    <th>Age</th>

    <th>Address</th>

    <th>E-Mail</th>

  </tr>
  <% for member in @members %>
  <tr>

    <td><a href="/members/<%= member.id %>"><%= member.full_name %></a></td>

    <td><a href="/members/<%= member.id %>"><%= member.age %></a></td>

    <td><a href="/members/<%= member.id %>"><%= member.address %></a></td>

    <td><a href="/members/<%= member.id %>"><%= member.email %></a></td>

    <td><a href="/members/<%= member.id %>/edit"><input class="btn btn--danger" type="submit" value="edit"></a></td>

    <td><form action="/members/<%= member.id %>/delete" method="POST">
      <input class="btn btn--danger" type="submit" value="delete" />
    </form></td>

  </tr>
  <% end %>
</table>
